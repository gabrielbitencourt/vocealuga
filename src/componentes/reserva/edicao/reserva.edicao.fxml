                <!-- onAction="#selectedGrupo" -->
                <Label layoutX="130.0" layoutY="213.0" text="Motorista" />
                <ChoiceBox fx:id="clienteSelect" layoutX="130.0" layoutY="237.0" prefHeight="25.0" prefWidth="340.0" />

                <Button onAction="#editarReserva" layoutX="130.0" layoutY="312.0" mnemonicParsing="false" prefHeight="27.0" prefWidth="340.0" text="Reservar" />

