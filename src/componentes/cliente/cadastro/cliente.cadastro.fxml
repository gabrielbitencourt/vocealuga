                     <HBox.margin>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="127.0" layoutY="214.0">
               <children>
                  <VBox HBox.hgrow="ALWAYS">
